{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "mkdir -p ${workspaceFolder}/build && gcc -g ${workspaceFolder}/main/main.c -o ${workspaceFolder}/build/teste"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compila o programa principal na pasta build com o nome teste"
        }
    ]
}
